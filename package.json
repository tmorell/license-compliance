{
    "name": "license-compliance",
    "version": "0.0.1",
    "description": "License compliance checker",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/**/*"
    ],
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "files": [
            "!test/util.ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "tap": false,
        "timeout": "5000",
        "verbose": true
    },
    "nyc": {
        "exclude": [
            "**/*.d.ts",
            "**/*.spec.ts",
            "coverage",
            "baseline",
            "test/util.ts"
        ],
        "extension": [
            ".ts"
        ],
        "cache": false,
        "all": true
    },
    "scripts": {
        "build": "rm -rf ./lib ./.nyc_output ./coverage && tsc",
        "coverage": "nyc report --reporter=html && xdg-open ./coverage/index.html",
        "coverage:ci": "nyc report --reporter=lcov",
        "debug:watch": "DEBUG=license-checker:* DEBUG_COLORS=true tsc-watch --onSuccess 'node lib/index.js'",
        "nyc": "nyc time ava",
        "test": "npm run build && npm run nyc",
        "test:watch": "ava --watch",
        "tslint": "tslint -t stylish -c tslint.json -p tsconfig.json --force"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tmorell/license-compliance.git"
    },
    "keywords": [
        "license",
        "compliance",
        "checker"
    ],
    "author": "Teo Morell",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tmorell/license-compliance/issues"
    },
    "homepage": "https://github.com/tmorell/license-compliance#readme",
    "dependencies": {
        "chalk": "2.4.2",
        "commander": "3.0.2",
        "debug": "4.1.1",
        "spdx-expression-parse": "^3.0.0",
        "spdx-satisfies": "^5.0.0"
    },
    "devDependencies": {
        "@types/debug": "4.1.5",
        "@types/node": "12.7.11",
        "ava": "2.4.0",
        "nyc": "14.1.1",
        "ts-node": "8.4.1",
        "tsc-watch": "4.0.0",
        "tslint": "5.20.0",
        "typescript": "3.6.3"
    }
}
