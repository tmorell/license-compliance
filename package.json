{
    "author": "Teo Morell <teomorell@gmail.com>",
    "ava": {
        "extensions": [
            "ts"
        ],
        "files": [
            "!tests/util.ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "tap": false,
        "timeout": "10000",
        "verbose": false
    },
    "bin": {
        "license-compliance": "./bin/cli.js"
    },
    "bugs": {
        "url": "https://github.com/tmorell/license-compliance/issues"
    },
    "dependencies": {
        "chalk": "4.1.0",
        "commander": "7.1.0",
        "cosmiconfig": "7.0.0",
        "debug": "4.3.1",
        "joi": "17.4.0",
        "spdx-expression-parse": "3.0.1",
        "spdx-satisfies": "5.0.0",
        "tslib": "2.1.0"
    },
    "description": "License compliance checker",
    "devDependencies": {
        "@types/cosmiconfig": "6.0.0",
        "@types/debug": "4.1.5",
        "@types/joi": "17.2.3",
        "@types/node": "12.20.6",
        "@types/sinon": "9.0.11",
        "@types/spdx-expression-parse": "3.0.0",
        "@types/spdx-satisfies": "0.1.0",
        "@typescript-eslint/eslint-plugin": "4.18.0",
        "@typescript-eslint/parser": "4.18.0",
        "ava": "3.15.0",
        "eslint": "7.22.0",
        "eslint-config-prettier": "8.1.0",
        "eslint-plugin-jest": "24.3.2",
        "nyc": "15.1.0",
        "sinon": "9.2.4",
        "ts-node": "9.1.1",
        "tsc-watch": "4.2.9",
        "typescript": "4.2.3"
    },
    "engines": {
        "node": ">=10.24.0"
    },
    "files": [
        "/lib/**/*",
        "/bin/**/*"
    ],
    "homepage": "https://github.com/tmorell/license-compliance#readme",
    "keywords": [
        "checker",
        "cli",
        "compliance",
        "license"
    ],
    "license": "MIT",
    "main": "./lib/index.js",
    "name": "license-compliance",
    "nyc": {
        "all": true,
        "cache": false,
        "exclude": [
            ".eslintrc.js",
            ".license-compliancerc.js",
            "**/*.d.ts",
            "**/*.spec.ts",
            "coverage",
            "baseline",
            "tests/util.ts",
            "bin/cli.js",
            "src/index.ts"
        ],
        "extension": [
            ".ts"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tmorell/license-compliance.git"
    },
    "scripts": {
        "build": "rm -rf ./lib ./.nyc_output ./coverage && tsc -p tsconfig.build.json",
        "coverage": "nyc report --reporter=html && xdg-open ./coverage/index.html",
        "coverage:ci": "nyc report --reporter=lcov",
        "debug:watch": "DEBUG=license-checker:* DEBUG_COLORS=true tsc-watch --onSuccess 'node ./lib/index.js'",
        "lint": "eslint . --ext .ts",
        "nyc": "nyc ava",
        "test": "npm run build && npm run nyc",
        "test:watch": "ava --watch"
    },
    "version": "1.1.0"
}
